{
  "manifest_version": 3,
  "name": "VintedBot - AI Listing Assistant",
  "version": "1.0.0",
  "description": "AI-powered listing creation and analytics for Vinted sellers",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.vinted.fr/*",
    "https://www.vinted.com/*",
    "https://www.vinted.de/*",
    "https://www.vinted.co.uk/*",
    "https://vintedbot.com/*",
    "https://vintedbot-staging.fly.dev/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.vinted.fr/*",
        "https://www.vinted.com/*",
        "https://www.vinted.de/*",
        "https://www.vinted.co.uk/*"
      ],
      "js": ["content.js"],
      "css": ["content-styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
