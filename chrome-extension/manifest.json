{
  "manifest_version": 3,
  "name": "VintedBot Assistant",
  "version": "1.0.0",
  "description": "AI-powered assistant for Vinted sellers - Auto-fill listings, track stats, automate tasks",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.vinted.fr/*",
    "https://www.vinted.com/*",
    "https://www.vinted.be/*",
    "https://www.vinted.de/*",
    "https://www.vinted.it/*",
    "https://www.vinted.es/*",
    "https://www.vinted.nl/*",
    "https://www.vinted.pl/*",
    "https://www.vinted.cz/*",
    "https://www.vinted.lt/*",
    "https://www.vinted.lu/*",
    "https://www.vinted.pt/*",
    "https://*.fly.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.vinted.fr/*",
        "https://www.vinted.com/*",
        "https://www.vinted.be/*",
        "https://www.vinted.de/*",
        "https://www.vinted.it/*",
        "https://www.vinted.es/*",
        "https://www.vinted.nl/*",
        "https://www.vinted.pl/*",
        "https://www.vinted.cz/*",
        "https://www.vinted.lt/*",
        "https://www.vinted.lu/*",
        "https://www.vinted.pt/*"
      ],
      "js": ["content.js"],
      "css": ["content-styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "VintedBot Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
